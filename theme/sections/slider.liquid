
<div class="section-slider">
    <div class="{% if section.settings.select_slide == 'full' %}slideshow-container{% else %}container{% endif %}">
        <div class="my-slider-{{section.id}}">
            {%- for block in section.blocks -%}
                <div class="slider-item slide">
                    <img src="{{ block.settings.image_slide | img_url : 'master' }}" alt="">
                    <div class="text-w">
                        <div class="content-w">
                            <p>{{block.settings.text_content}}</p>
                            <div class="price">
                                <div class="new-price">{{block.settings.new_price}}</div>
                                <div class="old-price">{{block.settings.ol-price}}</div>
                            </div>
                            <a href="">Add to cart</a>
                        </div>
                    </div>
                    <div class="discount">
                        <p>{{block.settings.discount}}</p>
                    </div>
                </div>
            {%- endfor -%}
        </div>
        <ul class="controls" id="customize-controls-{{section.id}}" aria-label="Carousel Navigation" tabindex="0">
            <li class="prev" data-controls="prev" aria-controls="customize" tabindex="-1">
                <i class="fas fa-angle-left fa-5x"></i>
            </li>
            <li class="next" data-controls="next" aria-controls="customize" tabindex="-1">
                <i class="fas fa-angle-right fa-5x"></i>
            </li>
        </ul>
    </div>
</div>





<script>

(function() {
    const slider = tns({
    container: '.my-slider-{{section.id}}',
    loop: true,
    items: 1,
    slideBy: 'page',
    nav: true,
    autoplay: false,
    speed: 400,
    autoplayButtonOutput: false,
    mouseDrag: true,
    controlsContainer: "#customize-controls-{{section.id}}",
    responsive: {
        640: {
            items: 2,
        },

        768: {
            items: 1,
        }
    }

  });
})();

</script>






