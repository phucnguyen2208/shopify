
<div class="section-banner">
    <div class="container">
        <div class="row">
        {%- for block in section.blocks -%}
            <div class="col-flex item">
                <div class="banner">
                    <div class="banner-img">
                        <a href="">
                            <img src="{{ block.settings.image_banner | img_url : 'master' }}" alt="">
                        </a>
                    </div>
                    <div class="banner-content">
                        {%- if block.settings.text_new != blank -%}
                            <span class="new">{{block.settings.text_new}}</span>
                        {%- endif -%}
                        {%- if block.settings.logo != blank -%}
                            <img src="{{ block.settings.logo | img_url : '213x47' }}" alt="">
                        {%- endif -%}
                        <h3 class="title">{{block.settings.text_title}}</h3>
                        {%- if block.settings.text_discount != blank -%}
                            <div class="discount">{{block.settings.text_discount}}</div>
                        {%- endif -%}
                        <div class="text-more">
                            <div class="text_left">{{block.settings.text_user}}</div>
                            <div class="text_right">{{block.settings.text_health}}</div>
                        </div>
                        <a href="" class="info">{{block.settings.text_infomation}}</a>
                    </div>
                </div>

                {%- if forloop.index == 1 -%}
                    {%- style -%}
                        .col-flex {
                            -ms-flex: 0 0 100%;
                            flex: 0 0 100%;
                            max-width: 100%;
                        }
                        .banner-content {
                            width: 512px;
                            top:70px;
                            left:70px;
                            bottom:70px;
                        }
                        .title {
                            width:426px;
                            font-size:50px;
                            font-weight: 600;
                            line-height:1.2;
                            margin:20px 0;
                        }
                        .text-more {
                            display:flex;
                            align-items:center;
                        }
                        .text-more {
                            color: #5B6C8F;
                        }
                        .text_left {
                            margin-right:60px;
                            font-weight: 600;
                            font-size: 16px;
                            line-height: 23px;
                        }
                        .info {
                            bottom:0 !important;
                            font-size: 18px;
                            line-height: 26px;
                            padding:10px 50px;
                            background: var(--bg-color);
                            border-radius: 42px;
                        }
                    {%- endstyle -%}
                {%- elsif forloop.index == 2 -%}
                    {%- style -%}
                        .col-flex {
                            -ms-flex: 0 0 50%;
                            flex: 0 0 50%;
                            max-width: 50%;
                            padding-right: 16px;
                            padding-left: 16px;
                        }
                        .new {
                            background: #12A05C;
                            border-radius: 42px;
                            padding: 2px 10px;
                            color:white;
                            text-transform: uppercase;
                        }
                        .banner-content {
                            width: 250px;
                            top:40px;
                            left:40px;
                            bottom:40px;
                        }
                        .title {
                            width:240px;
                            font-size:29px;
                            font-weight: 500;
                            line-height:1.3;
                            margin:0px auto;
                        }
                        .discount {
                            font-weight: bold;
                            font-size: 44px;
                            line-height:1.2;
                            color: #FF9923;
                        }
                        .info {
                            bottom:0;
                            font-size: 16px;
                            line-height: 23px;
                            padding:5px 30px;
                            background: #103178;
                            border-radius: 42px;
                            color:white;
                        }
                    {%- endstyle -%}
                {%- elsif forloop.index == 3 -%}
                    {%- style -%}
                        .col-flex {
                            -ms-flex: 0 0 33.333333%;
                            flex: 0 0 33.333333%;
                            max-width: 33.333333%;
                            padding-right: 16px;
                            padding-left: 16px;
                        }
                        .banner-content {
                            width: 150px;
                            top:40px;
                            left:40px;
                            bottom:40px;
                        }
                        .title {
                            width:145px;
                            font-size:25px;
                            font-weight: 500;
                            line-height:1.3;
                            margin:0px auto;
                        }
                    {%- endstyle -%}
                {%- endif -%}
            </div>
        {%- endfor -%}
        </div>
    </div>
</div>







{%- schema -%}

{
    "name" : {
      "en": "Banner"
    },
    "tag" : "section",
    "settings" : [
        {
            "type" :"header",
            "content": "Select Banner"
        }
    ],
    "blocks": [
        {
            "type": "header",
            "name" : "image",
            "settings" : [
                {
                    "type": "image_picker",
                    "id" : "image_banner",
                    "label" : {
                        "en" : "Banner"
                    }
                },
                {
                    "type": "image_picker",
                    "id" : "logo",
                    "label" : {
                        "en" : "Img Logo"
                    }
                },
                {
                    "type" : "text",
                    "id" : "text_new",
                    "label" : {
                    "en" : "Text New"
                    },
                    "default" : "new"
                },
                {
                    "type" : "text",
                    "id" : "text_title",
                    "label" : {
                    "en" : "Text Title"
                    },
                    "default" : "Get rid of bacteria in your home"
                },
                {
                    "type" : "text",
                    "id" : "text_discount",
                    "label" : {
                    "en" : "Text Discount"
                    },
                    "default" : "-30%"
                },
                {
                    "type" : "text",
                    "id" : "text_user",
                    "label" : {
                    "en" : "Text Discount"
                    },
                    "default" : "Up to 5 users simultaneously"
                },
                {
                    "type" : "text",
                    "id" : "text_health",
                    "label" : {
                    "en" : "Text Discount"
                    },
                    "default" : "Has HEALTH certificate"
                },
                {
                    "type" : "text",
                    "id" : "text_infomation",
                    "label" : {
                    "en" : "Text Infomation"
                    },
                    "default" : "More"
                }
            ]
        }


    ],
    "presets": [
        {
            "category": "Advanced layout",
            "name": "Banner section"
        }
    ]
}

{%- endschema -%}

