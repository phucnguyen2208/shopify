
<div class="section-follow">
    <div class="container">
        <h2>{{section.settings.block_title}}</h2>

         <ul class="controls" id="customize-controls-{{section.id}}" aria-label="Carousel Navigation" tabindex="0">
            <li class="prev" data-controls="prev" aria-controls="customize" tabindex="-1">
                <i class="fas fa-angle-left fa-5x"></i>
            </li>
            <li class="next" data-controls="next" aria-controls="customize" tabindex="-1">
                <i class="fas fa-angle-right fa-5x"></i>
            </li>
        </ul>

        <div class="my-slider-{{section.id}}">
            {%- for block in section.blocks -%}
                <div class="list-img slider-item">
                    <div class="item-img">
                        <img src="{{ block.settings.image | img_url : '200x200' }}" alt="">
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>








<script>

(function() {
    const slider = tns({
    container: '.my-slider-{{section.id}}',
    loop: true,
    items: 5,
    gutter: 8,
    slideBy: 'page',
    nav: false,
    autoplay: false,
    speed: 400,
    autoplayButtonOutput: false,
    mouseDrag: true,
    controlsContainer: "#customize-controls-{{section.id}}",
    responsive: {
        320: {
            items: 3,
        },
        375: {
            items: 3,
        },

        768: {
            items: 6,
        }
    }

  });
})();

</script>





{% schema %}

    {
        "name": "Follow Us",
        "tag": "section",
        "settings" : [
            {
                "type" :"header",
                "content": "Custom information"
            },
            {
                "type": "text",
                "id": "block_title",
                "label": "Block Title",
                "default" : "Follow @MYMEDI on instagram"
            }
        ],
        "blocks":[
            {
                "type": "block-image",
                "name": "Block Image",
                "settings":[
                    {
                        "type": "image_picker",
                        "id" : "image",
                        "label" : {
                            "en" : "Image"
                        }
                    }
                ]
            }
        ],
        "presets": [
            {
                "category": "Advanced layout",
                "name": "Follow section"
            }
        ]
    }

{% endschema %}