{% schema %}

    {
        "name": "Blog",
        "tag": "section",
        "settings" : [
            {
                "type" :"header",
                "content": "Custom information"
            },
            {
                "type" : "text",
                "id" : "title",
                "label" : {
                  "en" : "Title"
                },
                "default" : "From the blog"
            }
        ],
        "blocks":[
            {
                "type": "item-category",
                "name": "Item Category",
                "settings":[
                    {
                        "type" : "image_picker",
                        "id" : "image",
                        "label" : {
                          "en" : "Image Logo"
                        }
                    }
                ]
            }
        ],
        "presets": [
            {
                "category": "Advanced layout",
                "name": "Blog section"
            }
        ]
    }

{% endschema %}